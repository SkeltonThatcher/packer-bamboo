{
    "builders": [
        {
            "type": "amazon-ebs",
            "source_ami": "ami-7cb35e05",
            "region": "eu-west-1",
            "instance_type": "t2.micro",
            "ami_name": "Bamboo Server 6.1 {{timestamp}}",
            "user_data_file": "./scripts/SetUpWinRM.ps1",
            "communicator": "winrm",
            "winrm_username": "Administrator",
            "winrm_use_ssl": true,
            "winrm_insecure": true
        }
    ],
    "provisioners": [
        {
            "type": "powershell",
            "scripts": [
                "./scripts/EC2Config.ps1",
                "./scripts/BundleConfig.ps1",
                "./scripts/SetUpDevTools.ps1",
                "./scripts/InstallBambooServer.ps1"
            ]
        },
        {
            "type": "file",
            "source": "./tests",
            "destination": "C:/Windows/Temp"
        },
        {
            "type": "powershell",
            "script": "./scripts/RunTests.ps1"
        },
        {
            "type": "file",
            "source": "TestResults.xml",
            "destination": "TestResults.xml",
            "direction": "download"
        }
    ],
    "post-processors": [
        {
            "type": "manifest"
        }
    ]
}